<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:minHeight="64dp"
    android:padding="@dimen/activity_horizontal_margin"
    app:elevation="2dp">

    <pl.orangelabs.wificalling.ctrl.CustomFontTextView
        android:id="@+id/recspec_contact_details_phone_number"
        style="@style/VOWIFI.Text"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/dbg_data1"
        android:textColor="@color/textImportant"
        app:useHeaderFont="true"/>

    <pl.orangelabs.wificalling.ctrl.CustomFontTextView
        android:id="@+id/recspec_contact_details_phone_type"
        style="@style/VOWIFI.Text.Bold"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/recspec_contact_details_phone_number"
        android:text="@string/dbg_data2"/>
</RelativeLayout>