<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_licenses_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pl.orangelabs.wificalling.ctrl.CustomFontTextView
        style="@style/VOWIFI.Text.Header.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/dialog_licenses_title"
        app:useHeaderFont="true"/>

    <include layout="@layout/inc_separator"/>

    <WebView
        android:id="@+id/dialog_licenses_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>