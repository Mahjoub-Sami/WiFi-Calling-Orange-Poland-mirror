<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_agreement_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pl.orangelabs.wificalling.ctrl.CustomFontTextView
        android:id="@+id/dialog_agreement_title"
        style="@style/VOWIFI.Text.Header.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/accept_terms_title"
        app:useHeaderFont="true"/>

    <include layout="@layout/inc_separator"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.orangelabs.wificalling.ctrl.CustomFontTextView
            android:id="@+id/dialog_agreement_text"
            style="@style/VOWIFI.Text"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"/>
    </ScrollView>
</LinearLayout>